{
    "name": "vendidero/vendidero-helper",
    "description": "Will help vendidero users to manage their licenses and receive automatic updates",
    "license": "GPL-3.0-or-later",
    "type": "wordpress-plugin",
    "prefer-stable": true,
    "version": "2.2.4",
    "prefer-dist": true,
    "authors": [
        {
            "name": "vendidero",
            "email": "info@vendidero.de"
        }
    ],
    "require": {
        "composer/installers": "^1.9 || ^2.0",
        "automattic/jetpack-autoloader": "^2.6.0"
    },
    "require-dev": {
        "phpunit/phpunit": "7.5.14",
        "yoast/phpunit-polyfills": "^1.0",
        "woocommerce/woocommerce-sniffs": "^0.1.3"
    },
    "minimum-stability": "dev",
    "config": {
        "optimize-autoloader": true,
        "allow-plugins": true,
        "platform": {
            "php": "7.2"
        },
        "preferred-install": "dist",
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Vendidero\\VendideroHelper\\": "src"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "composer dump-autoload"
        ],
        "post-update-cmd": [
            "composer dump-autoload"
        ],
        "phpcs": [
            "phpcs -s -p"
        ],
        "phpcs-pre-commit": [
            "phpcs -s -p -n"
        ],
        "phpcbf": [
            "phpcbf -p"
        ]
    }
}
